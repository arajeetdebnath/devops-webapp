- name: Notify Slack on success
  if: success()
  run: |
    curl -X POST -H 'Content-type: application/json' \
    --data '{"text":"✅ CI pipeline succeeded for devops-webapp"}' \
    ${{ secrets.SLACK_WEBHOOK }}

- name: Notify Slack on failure
  if: failure()
  run: |
    curl -X POST -H 'Content-type: application/json' \
    --data '{"text":"❌ CI pipeline failed for devops-webapp"}' \
    ${{ secrets.SLACK_WEBHOOK }}
